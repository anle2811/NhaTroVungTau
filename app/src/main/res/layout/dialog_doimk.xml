<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_dialog"
    android:id="@+id/relLayout_doimk"
    android:layout_gravity="center"
    android:paddingBottom="5dp">
    <ScrollView
        android:id="@+id/src_doimk"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:id="@+id/tv_trangthaiCNmk"
                    android:layout_weight="1"
                    android:paddingBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/title_textview"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:text="Cập nhật mật khẩu" />
            </TableRow>
            <TableRow android:layout_marginTop="5dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:inputType="textPassword"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_MKcu"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Nhập mật khẩu cũ"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow android:layout_marginTop="5dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:inputType="textPassword"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_MKmoi"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Nhập mật khẩu mới"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow android:layout_marginTop="5dp">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="1"
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_laiMKmoi"
                        android:paddingLeft="15dp"
                        android:hint="Nhập lại mật khẩu mới"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="40dp"/>
                </android.support.design.widget.TextInputLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/src_doimk"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_dongCNmk"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="ĐÓNG"
            android:background="@drawable/button_style2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_CNmk"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_style2"
            android:text="CẬP NHẬT"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>