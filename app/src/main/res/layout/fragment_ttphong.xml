<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/maunen2"
    android:id="@+id/scroll_chitietphong"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rel_songuoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconSonguoi"
                android:src="@drawable/iconsonguoi"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <EditText
                android:inputType="number"
                android:background="@drawable/style_noedit_edt"
                android:textColor="#fff"
                android:id="@+id/edt_songuoi"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="25sp"
                android:text="5"
                android:layout_toRightOf="@id/iconSonguoi"
                android:layout_width="200dp"
                android:layout_height="50dp" />
            <Button
                android:visibility="gone"
                android:clickable="false"
                android:id="@+id/btn_capnhatSnguoi"
                android:textColor="#fff"
                android:background="@drawable/button_style1"
                android:text="Cập Nhật"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/edt_songuoi"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/rel_songuoi"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rel_giaphong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconGiaPhong"
                android:src="@drawable/giaphongicons"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:textColor="#fff"
                android:id="@+id/tv_giaPhong"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:text="100.000D"
                android:layout_toRightOf="@id/iconGiaPhong"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rel_dientich"
            android:layout_below="@id/rel_giaphong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconDiachi"
                android:src="@drawable/dientichicon"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:textColor="#fff"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:id="@+id/tv_dientichphong"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:text="50m2"
                android:layout_toRightOf="@id/iconDiachi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="top"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#fff"
                android:text="m2"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/rel_mota"
            android:layout_below="@id/rel_dientich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iconMota"
                android:src="@drawable/motaicon"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView
                android:textColor="#fff"
                android:paddingEnd="3dp"
                android:paddingRight="3dp"
                android:id="@+id/tv_motaphong"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:text="Nothing"
                android:layout_toRightOf="@id/iconMota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>