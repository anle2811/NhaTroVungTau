<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DangNhapActivity"
    android:background="#1565c0 "
    android:orientation="vertical"
    android:weightSum="11">
    <FrameLayout
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:src="@drawable/logo_pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="40sp"
            android:text="Đăng Nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/edt_taikhoan"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:paddingLeft="15dp"
            android:drawableLeft="@drawable/icon_taikhoan"
            android:background="@drawable/style_edittext"
            android:textSize="25sp"
            android:hint="Tài Khoản"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </FrameLayout>
    <FrameLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <android.support.design.widget.TextInputLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleDrawable="@drawable/icon_hideshowpass"
            app:passwordToggleTint="#f48e00">
            <android.support.design.widget.TextInputEditText
                android:inputType="textPassword"
                android:id="@+id/edt_matkhau"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:drawableStart="@drawable/icon_matkhau"
                android:background="@drawable/style_edittext"
                android:textSize="25sp"
                android:hint="Mật Khẩu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/icon_matkhau" />
        </android.support.design.widget.TextInputLayout>

    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_dangnhap"
            android:layout_marginRight="20dp"
            android:textSize="17sp"
            android:background="@drawable/style_button2"
            android:text="Đăng Nhập"
            android:layout_width="150dp"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/btn_dangkytk"
            android:textSize="17sp"
            android:background="@drawable/style_button2"
            android:text="Đăng Ký"
            android:layout_width="150dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <FrameLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/Underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>
</LinearLayout>