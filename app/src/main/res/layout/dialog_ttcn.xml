<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#293241"
    android:id="@+id/relLayout_ttcn"
    android:layout_gravity="center"
    android:paddingBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <ScrollView
        android:id="@+id/src_ttcn"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0">
            <TableRow>
                <TextView
                    android:paddingBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/title_textview"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textColor="#fff"
                    android:text="Thông tin cá nhân" />
            </TableRow>
            <TableRow android:layout_marginTop="5dp">
                <android.support.design.widget.TextInputLayout
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:text="Null"
                        android:enabled="false"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_hoten"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Họ tên"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:text="Null"
                        android:enabled="false"
                        android:textColor="#fff"
                        android:inputType="number"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_cmnd"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Số CMND"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:text="Null"
                        android:enabled="false"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_email"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Email"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow>
                <android.support.design.widget.TextInputLayout
                    app:hintTextAppearance="@style/FloatingHintStyle">
                    <EditText
                        android:text="Null"
                        android:enabled="false"
                        android:textColor="#fff"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/edt_diachi"
                        android:singleLine="true"
                        android:paddingLeft="15dp"
                        android:hint="Địa chỉ"
                        android:textSize="20sp"
                        android:background="@drawable/style_noedit_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </android.support.design.widget.TextInputLayout>
            </TableRow>
            <TableRow android:layout_marginTop="3dp">
                <TextView
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:text="Ngày Sinh" />
            </TableRow>
            <TableRow android:layout_marginTop="2dp">
                <LinearLayout
                    android:orientation="vertical">
                    <LinearLayout
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:text="Ngày"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:text="Tháng"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:gravity="center"
                            android:layout_weight="1"
                            android:textColor="#ffffff"
                            android:textSize="20sp"
                            android:text="Năm"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:background="#f4aa00"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="40sp">
                        <Spinner
                            android:id="@+id/spn_ngay"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"></Spinner>
                        <Spinner
                            android:id="@+id/spn_thang"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"></Spinner>
                        <Spinner
                            android:id="@+id/spn_nam"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"></Spinner>
                    </LinearLayout>
                </LinearLayout>
            </TableRow>
            <TableRow android:layout_marginTop="5dp">
                <LinearLayout
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <TextView
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:text="Giới Tính: "
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <RadioGroup
                        android:id="@+id/rdg_gioitinh"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:clickable="false"
                            android:id="@+id/rd_nam"
                            android:textSize="20sp"
                            android:layout_marginRight="30dp"
                            android:checked="true"
                            android:textColor="#ffffff"
                            android:text="Nam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RadioButton
                            android:clickable="false"
                            android:id="@+id/rd_nu"
                            android:textSize="20sp"
                            android:textColor="#ffffff"
                            android:text="Nữ"
                            android:checked="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_below="@id/src_ttcn"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/btn_dong"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="ĐÓNG"
            android:background="@drawable/button_style2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btn_chinhsua"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_style2"
            android:text="CHỈNH SỬA"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>