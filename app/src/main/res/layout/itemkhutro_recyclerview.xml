<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_KHUTRO"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/backgroundmenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_gravity="top"
            android:background="#a0000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_TENKHUTRO"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:paddingRight="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/maunen2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Tro Cua An"
                android:background="@drawable/textview_style4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
        <LinearLayout
            android:weightSum="10"
            android:background="#a0000000"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:weightSum="2"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_THANHPHO"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingRight="20dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="Vung Tau"
                        android:background="@drawable/textview_style1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                <TextView
                    android:id="@+id/tv_DIACHI"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/maunen2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Suoi Nghe Vung Tau"
                    android:background="@drawable/textview_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="4"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="@color/mautext1"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="Số phòng"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
                <FrameLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:id="@+id/tv_SLPHONG"
                        android:textColor="@color/mautext2"
                        android:layout_margin="5dp"
                        android:background="@drawable/textview_style3"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>